{
  "include": [
    "**/*.ts",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "lib": [
      "ES2022"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "paths": {
      "@shared/*": [
        "./shared/*"
      ]
    },
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "."
  }
}